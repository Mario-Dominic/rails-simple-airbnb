<%= link_to 'Add Flat', new_flat_path, class: 'btn btn-primary' %>
<h1>All Our Flats</h1>

<div class="flats-list">
  <% @flats.each do |flat| %>
    <div class="flat-card">
      <i class="fas fa-home"></i>

      <h3><%= flat.name %></h3>
      <p><%= flat.address %></p>
      <p><%= flat.number_of_guests %></p>
      <p><%= flat.price_per_night %></p>

      <%= link_to 'More info', flat_path(flat), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_flat_path(flat) %>
      <%= link_to 'Remove', flat_path(flat), method: :delete, data: { turbo: true, confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>
